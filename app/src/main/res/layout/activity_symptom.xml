<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.hyoju.dontsick.SymptomActivity">


    <EditText
        android:layout_width="330dp"
        android:id="@+id/symptom_search"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/symptom_search"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:singleLine="true"
        android:lines="1"
        android:hint="증상을 입력해주세요"
        />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/hospital_button"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="55dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"
            android:onClick="lookHospital"
            tools:ignore="OnClick"
            android:background="@drawable/disease_name"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"
            android:onClick="lookDisease"
            tools:ignore="OnClick"
            android:background="@drawable/hospital"/>
    </LinearLayout>

   <FrameLayout
       android:layout_width="330dp"
       android:layout_height="390dp"
       android:layout_gravity="center">

       <LinearLayout
           android:layout_width="330dp"
           android:layout_height="390dp"
           android:id="@+id/hospital_page"
           android:orientation="vertical">
       </LinearLayout>
       <LinearLayout
           android:layout_width="330dp"
           android:layout_height="390dp"
           android:id="@+id/disease_page"
           android:orientation="vertical"
           android:visibility="invisible">
       </LinearLayout>
   </FrameLayout>
</LinearLayout>
